#!/usr/bin/env bash
# Output contents of an encrypted file
# Usage: noirbox-cat filename

set -e -u -o pipefail

script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. "$script_dir/_noirbox-common"

up_to_noirbox_root
read_config
get_local_key

file="${1%.gpg}"

cat_file "$file" "$local_key"

